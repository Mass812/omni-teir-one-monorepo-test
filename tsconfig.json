{
  "compilerOptions": {
    "rootDir": ".",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {},
    "module": "commonjs",
    "esModuleInterop": true,
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "**/*.test.ts", "dist/**/*", "tsconfig.json"]
}
